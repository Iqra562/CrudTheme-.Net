@model IEnumerable<Department>   
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">



        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <div class="d-flex justify-content-between  m-2">
                    <div>

                        <h5 class="">Departments</h5>
                    </div>
                    <div class="d-flex align-self-baseline ">
                        <button class="btn  blueTheme p-2"> <a asp-action="Create" class="text-white">Add department</a> </button>
                    </div>
                </div>

                <table class="table table-dark table-hover ">
                    <thead class="text-light ">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Department Name</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Updated At</th>
                            <th scope="col">Edit </th>
                            <th scope="col">Delete </th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (Department dep in Model){
                            <tr class="tableText ">
                                <td>@dep.DepartmentId</td>
                                <td>@dep.DepartmentName</td>
                                <td>@dep.CreatedAt</td>
                                <td>@dep.LastUpdatedAt</td>
                                <td><button class="btn btn-secondary blueTheme"> <a asp-action="Edit" asp-route-id="@dep.DepartmentId"  class="text-white">Edit</a> </button></td>
                                <td><button type="default" class="btn btn-secondary deleteBtn" onclick="deleteEntity(@dep.DepartmentId)">Delete</button></td>
                             </tr>
                            }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    deleteEntity(id){
    let con = confirm("Are you sure?");
    if (con) {
        location.href = "/Department/Delete/" + id;
    }
    }
</script>
<!-- Table End -->
